---
//global head
const { title } = Astro.props;
const { pathname } = Astro.url;
const isFrontPage = pathname === "/";
import "../../styles/main.scss";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="format-detection" content="telephone=no" />
<link rel="canonical" href={"https://surfstock.dk" + pathname} />
<title>{title} - Surfstock</title>
{
    isFrontPage && (
        //Netlify Identity for user invitation/recovery
        //Only necessary on the front page
        <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js" />
    )
}

<!--realfavicongenerator-->
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
<link rel="manifest" href="/favicon/site.webmanifest" />
<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#547996" />
<link rel="shortcut icon" href="/favicon/favicon.ico" />
<meta name="msapplication-TileColor" content="#547996" />
<meta name="msapplication-config" content="/favicon/browserconfig.xml" />
<meta name="theme-color" content="#547996" />

<!--sitemap link-->
<link rel="sitemap" href="/sitemap-index.xml" />
