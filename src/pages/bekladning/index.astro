---
//apparel category page
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import CategoryPage from "../../layouts/CategoryPage.astro";
import capitalizeFirstLetter from "../../utils/capitalizeFirstLetter";
const category = "beklædning";
const products = await getCollection(category);
---

<Layout title={capitalizeFirstLetter(category)}>
    <meta
        slot="head"
        name="description"
        content="Alt vores billige beklædning og udstyr på restlageret. Billigt tøj og våddragter til begyndere, let øvede og øvede surfere."
    />
    <CategoryPage category={category} products={products} />
</Layout>
